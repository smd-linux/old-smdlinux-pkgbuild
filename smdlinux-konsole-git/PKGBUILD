# Maintainer: Seth Dawson <seth@sethdawson.me>
pkgname=smdlinux-konsole-git
_pkgname=smdlinux-konsole
_destname1="/etc"
_licensedir="/usr/share/smdlinux/licenses/"
pkgver=2.0.0
pkgrel=3
pkgdesc="konsole config for smdlinux"
arch=('any')
url="https://github.com/smd-linux/smdlinux-konsole"
license=('GPL3')
makedepends=('git')
depends=('bash')
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/smd-linux/${_pkgname}.git")
sha256sums=('SKIP')
install='readme.install'
package() {
	install -dm755 ${pkgdir}${_licensedir}${_pkgname}
	install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}

	cp -r  ${srcdir}/${_pkgname}${_destname} ${pkgdir}${_destname}
}
